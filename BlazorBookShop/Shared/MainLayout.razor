@inherits LayoutComponentBase
@inject NavigationManager maneger

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudButton OnClick="() => maneger.NavigateTo(_registrationPageName)"
                   Variant="Variant.Filled"
                   EndIcon="@Icons.Material.Filled.PersonAdd"
                   Color="Color.Primary"
        >
            Регистрация
        </MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Book Shop</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private readonly string _registrationPageName = "/registration";

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}