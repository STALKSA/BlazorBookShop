﻿

<MudCard Class="border rounded shadow-sm" Style="width: 540px; border-color:blueviolet;">
<MudCardMedia Image="@Product.Img" Height="600" />
<MudCardContent>
    <MudText Typo="Typo.h5" Class="text-info bg-transparent">@Product.Name</MudText>
        <MudText Typo="Typo.body2" Class="text-info bg-transparent">Цена: @Product.Price</MudText>
</MudCardContent>
</MudCard>


@code {
	[Parameter]
    public Product Product { get; set; } = null!;

}

